@using Books2023.Utilities;
@using Books2023.Web.ViewModels;
@model OrderListVm
<form method="post">
	<input asp-for="@Model.OrderHeader.Id" hidden />
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="container row">
					<div class="col-12 d-none d-md-block col-md-6 pb-1">
						<i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
					</div>
					<div class="col-12 col-md-4 offset-md-2 text-right">
						<a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-primary">PickUp Details:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">Name</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.Name" class="form-control" />
										<span asp-validation-for="@Model.OrderHeader.Name" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeader.Name" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Phone</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.PhoneNumber" class="form-control" />
										<span asp-validation-for="@Model.OrderHeader.PhoneNumber" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeader.PhoneNumber" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Address</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.StreetAddress" class="form-control" />
										<span asp-validation-for="@Model.OrderHeader.StreetAddress" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeader.StreetAddress" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">City</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.City" class="form-control" />
										<span asp-validation-for="@Model.OrderHeader.City" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeader.City" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">State</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.State" class="form-control" />
										<span asp-validation-for="@Model.OrderHeader.State" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeader.State" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Zip Code</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.ZipCode" class="form-control" />
										<span asp-validation-for="@Model.OrderHeader.ZipCode" class="text-danger"></span>
									}
									else
									{
										<input asp-for="@Model.OrderHeader.ZipCode" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Email</div>
								<div class="col-9">
									<input asp-for="@Model.OrderHeader.ApplicationUser.Email" readonly type="text" class="form-control" />
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Order Date</div>
								<div class="col-9">

									<input value="@Model.OrderHeader.OrderDate.ToShortDateString()" type="text" class="form-control" />

								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Carrier</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.Carrier" class="form-control" />
									}
									else
									{
										<input asp-for="@Model.OrderHeader.Carrier" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Tracking</div>
								<div class="col-9">
									@if (User.IsInRole(WC.Role_Admin))
									{
										<input asp-for="@Model.OrderHeader.TrackingNumber" class="form-control" />
									}
									else
									{
										<input asp-for="@Model.OrderHeader.TrackingNumber" readonly class="form-control" />

									}
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">Shipping Date</div>
								<div class="col-9">
									<input value="@Model.OrderHeader.ShippingDate.ToShortDateString()" type="text" readonly class="form-control" />
								</div>
							</div>
							@if (User.IsInRole(WC.Role_Admin))
							{
								<div class="row my-1">
									<div class="col-3">Session ID</div>
									<div class="col-9">
										<input readonly class="form-control" />
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">Payment Intent ID</div>
									<div class="col-9">
										<input readonly class="form-control" />
									</div>
								</div>

							}
							<div class="row my-1">
								@if (Model.OrderHeader.PaymentStatus == WC.PaymentStatusDelayedPayment)
								{
									<div class="col-3">Payment Due Date</div>
									<div class="col-9">
										<input readonly type="text" class="form-control" />
									</div>

								}else
								{
									<div class="col-3">Payment Date</div>
									<div class="col-9">
										<input readonly type="text" class="form-control" />
									</div>

								}


							</div>
							<div class="row my-1">
								<div class="col-3">Payment Status</div>
								<div class="col-9">
									<input asp-for="@Model.OrderHeader.PaymentStatus" readonly class="form-control" />
								</div>
							</div>


							<input asp-action="UpdateOrderDetail" type="submit" class="btn btn-warning form-control my-1" value="Update Order Details" />



						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-primary">Order Summary</span>
							</h4>
							<label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>

							<ul class="list-group mb-3">
								<li class="list-group-item d-flex justify-content-between p-2">
									<div class="row container">
										@foreach(var item in Model.OrderDetail)
										{
											<div class="col-8">

												<h6 class="my-0 text-primary">@item.Product.Title</h6>
												<small class="text-muted">Price : @item.Price.ToString("C")</small><br />
												<small class="text-muted">Quantity : @item.Quantity</small>
											</div>
											<div class="col-4 text-end">
												<p class="text-success">@((item.Price*item.Quantity).ToString("C"))</p>
											</div>

										}
									</div>
								</li>

								<li class="list-group-item bg-info">
									<div class="row container">
										<div class="col-6">
											<h5 class="text-white">TOTAL </h5>
										</div>
										<div class="col-6 text-end">
											<h5 class="text-white">@Model.OrderHeader.OrderTotal.ToString("C")</h5>
										</div>
									</div>
								</li>
							</ul>
							@if (User.IsInRole(WC.Role_Admin))
							{
								if (Model.OrderHeader.OrderStatus == WC.StatusApproved)
								{
									<input type="submit" class="btn btn-primary form-control my-1" value="Start Processing" />

								}
								if (Model.OrderHeader.OrderStatus == WC.StatusInProgress)
								{
									<input type="submit" class="btn btn-primary form-control my-1" value="Ship Order" />

								}
								if (Model.OrderHeader.PaymentStatus == WC.PaymentStatusDelayedPayment &&
								Model.OrderHeader.OrderStatus == WC.StatusShipped)
								{
									<input type="submit" class="btn btn-success form-control my-1" value="Pay Now" />

								}
								if (Model.OrderHeader.OrderStatus != WC.StatusRefunded &&
								Model.OrderHeader.OrderStatus != WC.StatusCancelled
								&& Model.OrderHeader.OrderStatus != WC.StatusShipped)
								{
									<input type="submit" class="btn btn-danger form-control my-1" value="Cancel Order" />

								}
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
